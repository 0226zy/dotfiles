"--------------------------------------------------------------------------------------------
"----------------------------------- 按下 F1 显示 当前行所在的函数名  ------------------------
"--------------------------------------------------------------------------------------------
fun! ShowFuncName()
  let lnum = line(".")
  let col = col(".")
  echohl ModeMsg
  echo getline(search("^[^ \t#/]\\{2}.*[^:]\s*$",'bW'))
  echohl None
  call search("\\%" . lnum . "l" . "\\%" . col . "c")
endfun
map <F11> :call ShowFuncName() <CR>

endfunction
